---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

type Props = {
  title: string;
  description?: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html class="min-h-full" lang="en">
  <head>
    <BaseHead title={title} description={description ?? ""} />
  </head>
  <body
    class="bg-primary accent-light-primary selection:bg-light-select-bg selection:text-light-select-text scroller"
  >
    <Header title={title} />
    <main class="mx-auto max-w-4xl px-4 md:px-6 lg:px-8 py-12 min-h-full">
      <slot />
    </main>
  </body>
</html>
