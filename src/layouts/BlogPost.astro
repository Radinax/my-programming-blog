---
import { SITE_TITLE } from "../consts";
import BaseLayout from "./BaseLayout.astro";

const { title, description } = Astro.props;
---

<BaseLayout title={`${SITE_TITLE} | ${title}`} description={description}>
  <article
    class="prose max-w-none prose-code:text-lg text-md sm:text-xl text-gray-700 scroller"
  >
    <h1>
      {title}
    </h1>
    <slot />
  </article>
</BaseLayout>
