---
import BaseLayout from './BaseLayout.astro';

const { title, description, } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="prose prose-img:rounded-lg dark:prose-invert max-w-none prose-code:text-base prose-pine text-xl">
    <h1 class="text-light-primary dark:text-dark-primary">{title}</h1>
    <slot />
  </article>
</BaseLayout>
