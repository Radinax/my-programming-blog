---
import { SITE_TITLE } from "../consts";
import BaseLayout from "./BaseLayout.astro";

const { title, description } = Astro.props;
---

<BaseLayout title={`${SITE_TITLE} | ${title}`} description={description}>
  <article
    class="prose prose-img:rounded-lg max-w-none prose-code:text-lg prose-pine text-md sm:text-xl text-gray-800 scroller"
  >
    <h1 class="text-light-primary text-xl sm:text-2xl">
      {title}
    </h1>
    <slot />
  </article>
</BaseLayout>
