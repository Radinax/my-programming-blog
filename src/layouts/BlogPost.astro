---
import BaseLayout from './BaseLayout.astro';

const { title, description, } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="prose prose-img:rounded-lg dark:prose-invert max-w-none prose-code:text-base prose-pine">
    <h1 class="text-pine-dawn-text dark:text-pine-text">{title}</h1>
    <slot />
  </article>
</BaseLayout>
