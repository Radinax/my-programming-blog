---
import Tag from "./Tag.astro";

interface Props {
  slug: string;
  title: string;
  dateTime: Date;
  categories: string[];
  description: string;
}

function getDateTime(date: Date) {
  const year = date.getFullYear();
  const month = (date.getMonth() + 1).toString().padStart(2, "0");
  const day = date.getDate().toString().padStart(2, "0");
  return `${year}-${month}-${day}`;
}

const { slug, title, dateTime, categories, description } = Astro.props;
---

<article class="flex max-w-xl flex-col items-start justify-between">
  {/* Article Header */}
  <div class="group relative">
    <h1
      class="mt-3 text-xl font-semibold leading-6 text-pine-dawn-text group-hover:opacity-90"
    >
      <a href={`/blog/${slug}`}>
        <span class="absolute inset-0"></span>
        {title}
      </a>
    </h1>
  </div>
  {/* Article Body */}
  <div
    class="flex flex-col gap-1 md:flex-row md:items-center gap-x-4 text-xs mt-1"
  >
    {/* Article Header Date */}
    <time datetime={getDateTime(dateTime)} class="text-light-primary min-w-fit">
      {
        dateTime.toLocaleString("en", {
          dateStyle: "long",
        })
      }
    </time>
    {/* Article Header Tags */}
    <div class="flex gap-2 flex-wrap">
      {categories.map((c) => <Tag href={`/tags/${c}`}>{c}</Tag>)}
    </div>
  </div>
  {/* Description */}
  <p class="mt-2 text-lg line-clamp-3 leading-6 text-light-primary">
    {description}
  </p>
</article>
